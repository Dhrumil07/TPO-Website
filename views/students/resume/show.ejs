<% layout('layouts/boilerplate')%>
    <script src="/javascripts/html2pdf.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script>
 
    <div class="row d-flex">
        <div class="col-12 mb-3">
            <button class="float-md-end  btn btn-primary " id="download">Download PDF</button>
        </div>
    </div>
    <div class="border border-dark p-3 mb-3 " id="resume">
        <div class="row mb-2">
            <div class="col-6">
                <h2 class="mb-0 mx-2">
                    <%= resume.personal.firstName%>
                        <%= resume.personal.lastName%>
                </h2>
                <div class="d-inline-block px-2 mt-2">
                    <% if( resume.personal.linkedin ){ %>
                        Linkedin&nbsp;: <a href="<%= resume.personal.linkedin%>" class="btn btn-dark-10 p-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                                <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                              </svg>
                        </a>
                        <% } %>
                            <br>
                            <% if( resume.personal.github ){ %>
                                Github&nbsp;&nbsp;&nbsp;: <a href="<%= resume.personal.github%>" class="btn btn-dark-10 p-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
                                        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                                      </svg>
                                        <% } %>
                                </a>
                </div>
            </div>
            <div class="col-6">
                <div class="d-inline-block  float-md-end">
                    <p>Email: <%= resume.personal.email%> <br>
                            Mobile: <%= resume.personal.mobile%>
                    </p>
                </div><br>
            </div>
        </div>

        <div class="row px-2">
            <div class="col ">
                <h5 class="justify-content-center text-center">EDUCATIONAL QUALIFICATION</h5>
            </div>
            <hr style="border-top:2px solid black;">
        </div>


        <div class='row'>
            <div class="col-8 px-2">
                <ul>
                    <li>
                        <%= resume.degreeCollege.name%><br>
                            <%= resume.degreeCollege.degree%> in
                                <%= resume.degreeCollege.branch%> with CGPA of <%= resume.degreeCollege.cgpa%>
                                        out of 10.0
                    </li>
                </ul>
            </div>
            <div class="col-4">
                <div class="d-inline-block float-md-end">
                    <p class="float-md-end mb-0">
                        <%= resume.degreeCollege.location%>
                    </p><br>
                    <%= resume.degreeCollege.year%>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class="col-8 px-2">
                <ul>
                    <li>
                        <%= resume.juniorCollege.name%><br>
                        Scored <%= resume.juniorCollege.percentage%> % in <%= resume.juniorCollege.board%><br>
                        <% if(resume.juniorCollege.jee){%>JEE Score: <%= resume.juniorCollege.jee%><% }%><br>
                        <% if(resume.juniorCollege.cet){%>MHT-CET Score: <%= resume.juniorCollege.cet%><% } %> 
                    </li>
                    
                        
                    
                </ul>
            </div>
            <div class="col-4">
                <div class="d-inline-block float-md-end">
                    <%= resume.juniorCollege.location%><br>
                        <%= resume.juniorCollege.year%>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class="col-8 px-2">
                <ul>
                    <li>
                        <%= resume.school.name%><br>
                            Scored <%= resume.school.percentage%> % in <%= resume.school.board%>
                    </li>
                </ul>
            </div>
            <div class="col-4">
                <div class="d-inline-block float-md-end">
                    <%= resume.school.location%><br>
                        <%= resume.school.year%>
                </div>
            </div>
        </div>

        <% if(resume.skills.length){ %>
        <div class="row px-2">
            <div class="col">
              <h5 class="justify-content-center text-center">SKILLS</h5> 
            </div>
            <hr style="border-top:2px solid black;">
        </div>
     
        <div class="row">
            <div class="col">
                <ul>
                    <% for(let skill of resume.skills) {%>
                        <li>
                            <%= skill%>
                        </li>
                        <% }%>
                </ul>
            </div>
        </div>
        <%   } %> 

        <% if(resume.projects.length){ %>
        <div class="row px-2">
            <div class="col">
                <h5 class="justify-content-center text-center">PROJECTS</h5>
            </div>
            <hr style="border-top:2px solid black;">
        </div>

        <div class="row">
            <div class="col">
                <ul>
                    <% for(let project of resume.projects) {%>
                        <li>
                            <%= project.title%>
                                <ul>
                                    <li>Stack Used: <%= project.stack%>
                                    </li>
                                    <li>Description: <%= project.description%>
                                    </li>
                                </ul>
                        </li>
                        <% }%>
                </ul>
            </div>
        </div>
        <%   }%> 
        
        <% if(resume.achievements.length){ %>
        <div class="row px-2">
            <div class="col">
                <h5 class="justify-content-center text-center">ACHIEVEMENTS</h5>
            </div>
            <hr style="border-top:2px solid black;">
        </div>

        <div class="row">
            <div class="col">
                <ul>
                    <% for(let achievement of resume.achievements) {%>
                        <li>
                            <%= achievement.title%>
                                <ul>
                                    <li>Description: <%= achievement.description%>
                                    </li>
                                </ul>
                        </li>
                        <% }%>
                </ul>
            </div>
        </div>
        <%   }%> 

    </div>

    <div class="row mb-3">
        <div class="col-4 mb-3">
            <a class="btn btn-secondary" href="/students/resume">Back</a>
        </div>
        <div class="col-4 d-flex justify-content-center mb-3">
            <a class="card-link btn btn-info  text-center" href="/students/resume/<%= resume._id%>/edit">Edit</a>
        </div>
        <div class="col-4 mb-3">
            <form class="d-inline" action="/students/resume/<%= resume._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger float-md-end">Delete</button>
            </form>
        </div>
       
    </div>
